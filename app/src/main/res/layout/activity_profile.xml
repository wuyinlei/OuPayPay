<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ececec"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/main_color"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/tv_back_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/iv_back"
                android:text="@string/title_mine"
                android:textColor="@color/white"/>


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/profile_title"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/len_20"
            android:background="@color/main_color"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/len_10"
            android:text="@string/profile_nickname"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/len_10"
            android:text="@string/profile_desc"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_40"
                android:text="@string/tv_account"/>

            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_40"
                android:text="@string/tv_account"
                tools:text="1069584784@qq.com"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/font_20"
            android:layout_marginTop="@dimen/len_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_40"
                android:text="@string/profile_name"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_40"
                android:text="@string/tv_account"
                tools:text="1069584784@qq.com"/>

            <ImageView
                android:id="@+id/iv_authen"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/font_10"
                android:src="@color/main_color"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_12"
            android:background="#EBEBEB"/>

        <RelativeLayout
            android:id="@+id/re_my_bank"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_48"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/len_20"
                android:layout_height="@dimen/len_20"
                android:layout_marginStart="15dp"
                android:src="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_50"
                android:text="@string/my_bank"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_bank_num"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="8dp"
                android:layout_toLeftOf="@+id/iv_arrow"
                android:src="@color/black"
                tools:text="1"/>


            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:src="@color/black"
                tools:text="1"/>


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_12"
            android:background="#EBEBEB"/>

        <RelativeLayout
            android:id="@+id/re_my_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_48"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/len_20"
                android:layout_height="@dimen/len_20"
                android:layout_marginStart="15dp"
                android:src="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_50"
                android:text="@string/my_code"
                android:textSize="15sp"/>


            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:src="@color/black"
                tools:text="1"/>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_12"
            android:background="#EBEBEB"/>

        <RelativeLayout
            android:id="@+id/re_my_assets"
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_48"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/len_20"
                android:layout_height="@dimen/len_20"
                android:layout_marginStart="15dp"
                android:src="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_50"
                android:text="@string/my_assets"
                android:textSize="15sp"/>


            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:src="@color/black"
                tools:text="1"/>


        </RelativeLayout>

    </LinearLayout>

</ScrollView>