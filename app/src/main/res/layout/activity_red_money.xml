<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#cf374a"
                android:fitsSystemWindows="true"
                android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        >

        <TextView
            android:id="@+id/tv_back_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="16sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/red_envelopes"
            android:textColor="@color/white"
            android:textSize="17sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="435dp"
        android:layout_below="@+id/re_title"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/bg_red_money_border"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_30"
            android:gravity="center_horizontal"
            android:text="准备发给朋友 啊啊啊啊五六环"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_48"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="@dimen/len_30"
            android:background="@drawable/bg_money_border"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_20"
                android:text="金额"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/edit_yuan"
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="44dp"
                android:background="@null"
                android:hint="填写金额"
                android:textColor="@color/base_text_74"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/len_20"
                android:layout_marginStart="@dimen/len_20"
                android:text="元"
                android:textColor="@color/black"
                android:textSize="15sp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_48"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="@dimen/len_12"
            android:background="@drawable/bg_money_border"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/edit_blessing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_20"
                android:alpha="0.46"
                android:background="@null"
                android:hint="恭喜发财，万事如意！"
                android:textColor="@color/base_text_74"
                android:textSize="15sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_money_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="49dp"
                android:text="¥"
                android:textColor="@color/black"
                android:textSize="26sp"/>


            <TextView
                android:id="@+id/tv_money_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/len_8"
                android:layout_marginTop="@dimen/len_30"
                android:layout_toRightOf="@+id/tv_money_type"
                android:text="0.00"
                android:textColor="@color/black"
                android:textSize="44sp"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_pay_red"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bt_red_border"
            android:gravity="center"
            android:text="@string/red_envelopes"
            android:textColor="@color/white"
            android:textSize="17sp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tv_pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用余额支付"
                android:textColor="@color/base_text_74"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_pay_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/tv_pay_type"
                android:text="更换"
                android:textColor="#4a90e2"
                android:textSize="13sp"/>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_blessing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/len_30"
        android:gravity="center"
        android:text="发放成功后红包内金额将自动计入对方账户"
        android:textColor="@color/white"
        android:textSize="13sp">

    </TextView>


</RelativeLayout>