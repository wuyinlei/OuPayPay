<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#30384C"
        android:gravity="center"
        android:text="@string/title_mine"
        android:textColor="@color/white"
        android:textSize="17sp"/>

    <RelativeLayout
        android:id="@+id/re_mine"
        android:layout_width="match_parent"
        android:layout_height="98dp">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="@dimen/len_68"
            android:layout_height="@dimen/len_68"
            android:layout_margin="15dp"
            android:src="@mipmap/ic_launcher"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/len_26"
            android:layout_toEndOf="@id/iv_profile"
            android:textColor="@color/black"
            android:textSize="17sp"
            tools:ignore="RelativeOverlap"
            tools:text="若兰明月"/>


        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nickname"
            android:layout_marginTop="@dimen/len_2"
            android:layout_toEndOf="@id/iv_profile"
            android:textColor="@color/base_text_74"
            android:textSize="17sp"
            tools:text="若兰明月"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="33dp"
            android:layout_marginTop="@dimen/len_2"
            android:text="@string/privite_profile"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:src="@color/black"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_12"
        android:background="#EBEBEB"/>

    <RelativeLayout
        android:id="@+id/re_my_bank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_48"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/len_20"
            android:layout_height="@dimen/len_20"
            android:layout_marginStart="15dp"
            android:src="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_50"
            android:text="@string/my_bank"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:src="@color/black"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/len_50"
        android:background="#EBEBEB"/>

    <RelativeLayout
        android:id="@+id/re_my_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_48"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/len_20"
            android:layout_height="@dimen/len_20"
            android:layout_marginStart="15dp"
            android:src="@color/black"/>

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_50"
            android:text="@string/my_code"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:src="@color/black"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_12"
        android:background="#EBEBEB"/>


    <RelativeLayout
        android:id="@+id/re_my_collect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_48"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/len_20"
            android:layout_height="@dimen/len_20"
            android:layout_marginStart="15dp"
            android:src="@color/black"/>

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_50"
            android:text="@string/my_collect"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:src="@color/black"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/len_50"
        android:background="#EBEBEB"/>

    <RelativeLayout
        android:id="@+id/re_my_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_48"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/len_20"
            android:layout_height="@dimen/len_20"
            android:layout_marginStart="15dp"
            android:src="@color/black"/>

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_50"
            android:text="@string/my_message"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:src="@color/black"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_12"
        android:background="#EBEBEB"/>


    <RelativeLayout
        android:id="@+id/re_my_customer_service"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_48"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/len_20"
            android:layout_height="@dimen/len_20"
            android:layout_marginStart="15dp"
            android:src="@color/black"
            tools:ignore="ContentDescription"/>

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_50"
            android:text="@string/my_customer_service"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:src="@color/black"/>

    </RelativeLayout>

</LinearLayout>