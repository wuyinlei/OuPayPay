<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/tv_back_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/iv_back"
                android:text="@string/title_home_bank"
                android:textColor="#4A4A4A"/>


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/my_assets_all"
                android:textColor="@color/black"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_60"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="@dimen/len_38"
                android:layout_height="@dimen/len_38"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@+id/iv_profile"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="啊啊啊五六环"/>

            <TextView
                android:id="@+id/tv_realname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nickname"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/iv_profile"
                android:textColor="#878787"
                android:textSize="13sp"
                tools:text="真实姓名: xxx"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#ececec"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="103dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:text="总资产"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:text="¥"
                android:textColor="@color/black"
                android:textSize="20sp"/>


            <TextView
                android:id="@+id/tv_all_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold"
                tools:text="645.00"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#ececec"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_yuer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_36"
                android:layout_marginTop="@dimen/len_20"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/len_6"
                    android:layout_height="@dimen/len_6"
                    android:src="#2BB96F"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/len_12"
                    android:text="@string/assets_my_yuer"
                    android:textColor="#9B9B9B"/>

                <TextView
                    android:id="@+id/tv_yuer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/len_12"
                    android:textColor="@color/black"
                    tools:text="@string/assets_my_yuer"/>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_hongbao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_yuer"
                android:layout_marginStart="@dimen/len_36"
                android:layout_marginTop="@dimen/len_20"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/len_6"
                    android:layout_height="@dimen/len_6"
                    android:src="#EE465B"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/len_12"
                    android:text="@string/assets_my_hong"
                    android:textColor="#9B9B9B"/>

                <TextView
                    android:id="@+id/tv_hongbao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/len_12"
                    android:textColor="@color/black"
                    tools:text="@string/assets_my_yuer"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_hongbao"
                android:layout_marginStart="@dimen/len_36"
                android:layout_marginTop="@dimen/len_20"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/len_6"
                    android:layout_height="@dimen/len_6"
                    android:src="#F5A623"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/len_12"
                    android:text="@string/assets_my_jifen"
                    android:textColor="#9B9B9B"/>


                <TextView
                    android:id="@+id/tv_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/len_12"
                    android:textColor="@color/black"
                    tools:text="@string/assets_my_yuer"/>

            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="#ececec"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">


            <ImageView
                android:layout_width="@dimen/len_20"
                android:layout_height="@dimen/len_20"
                android:layout_margin="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="43dp"
                android:gravity="center"
                android:text="@string/yesterday_collect"
                android:textColor="@color/black"
                android:textSize="15dp"/>


            <TextView
                android:id="@+id/tv_yes_income"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/len_20"
                android:layout_marginStart="43dp"
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="+877.00"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ececec"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/len_20"
                        android:text="@string/assets_my_jifen"
                        android:textColor="#4A4A4A"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_jifen_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/len_20"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:text="1210"/>


                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#ececec"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/len_20"
                        android:text="@string/assets_my_hong"
                        android:textColor="#4A4A4A"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_hongbao_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/len_20"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        tools:text="1210"/>


                </RelativeLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ececec"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/len_20"
                            android:text="@string/assets_my_zhuanru"
                            android:textColor="#4A4A4A"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/tv_zhuanru_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/len_20"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:text="1210"/>


                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#ececec"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/len_20"
                            android:text="@string/assets_my_zhuanchu"
                            android:textColor="#4A4A4A"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/tv_zhuanchu_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/len_20"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            tools:text="1210"/>


                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</ScrollView>