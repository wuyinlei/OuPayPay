<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="@dimen/len_72"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_bills_type"
        android:layout_width="@dimen/len_42"
        android:layout_height="@dimen/len_42"
        android:layout_marginStart="15dp"/>


    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/len_72"
        android:ellipsize="end"
        android:maxEms="10"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="15sp"
        tools:text="啊啊啊啊啊啊啊啊五环啊啊啊啊五环五环-收款"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nickname"
        android:layout_marginStart="@dimen/len_72"
        android:layout_marginTop="3dp"
        android:textColor="#9B9B9B"
        android:textSize="15sp"
        tools:text="10:20"/>


    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_nickname"
        android:layout_alignBottom="@+id/tv_nickname"
        android:layout_alignEnd="@+id/tv_type"
        android:ellipsize="end"
        android:maxEms="10"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="+0.60"/>

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_nickname"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="3dp"
        android:textColor="#EE465B"
        android:textSize="12sp"
        tools:text="等待对方付款"/>


</RelativeLayout>