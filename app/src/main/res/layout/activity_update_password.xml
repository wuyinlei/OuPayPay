<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="@dimen/len_120"
            android:layout_height="@dimen/len_120"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/len_60"/>


        <EditText
            android:id="@+id/edit_bank_name"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/len_52"
            android:background="@null"
            android:hint="@string/input_bank_account_name"
            android:textColor="@color/base_text_gray"
            android:textSize="15sp"/>

        <View
            android:layout_width="268dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/len_10"
            android:background="#d6d6d6"/>


        <EditText
            android:id="@+id/edit_phone_num"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/len_16"
            android:background="@null"
            android:hint="@string/input_account_phone"
            android:inputType="phone"
            android:textColor="@color/base_text_gray"
            android:textSize="15sp"/>

        <View
            android:layout_width="268dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/len_10"
            android:background="#d6d6d6"/>

        <LinearLayout
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/len_16"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_phone_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/please_input_phone_code"
                android:textColor="@color/base_text_gray"
                android:textSize="15sp"/>

            <TextView
                android:textSize="14sp"
                android:id="@+id/tv_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/len_10"
                android:text="@string/get_veri_code"
                android:textColor="#4a72e2"/>


        </LinearLayout>


        <View
            android:layout_width="268dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/len_10"
            android:background="#d6d6d6"/>


        <EditText
            android:id="@+id/edit_new_pass"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/len_16"
            android:background="@null"
            android:hint="@string/input_new_password"
            android:textColor="@color/base_text_gray"
            android:textSize="15sp"/>

        <View
            android:layout_width="268dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/len_10"
            android:background="#d6d6d6"/>


        <EditText
            android:id="@+id/edit_new_pass_again"
            android:layout_width="268dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/len_16"
            android:background="@null"
            android:hint="@string/input_new_password_again"
            android:textColor="@color/base_text_gray"
            android:textSize="15sp"/>

        <View
            android:layout_width="268dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/len_10"
            android:background="#d6d6d6"/>


        <TextView
            android:id="@+id/tv_reset_password"
            android:layout_width="280dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/len_40"
            android:background="@drawable/bt_next_border"
            android:gravity="center"
            android:text="@string/reset_password"
            android:textColor="@color/white"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/len_20"
            android:text="@string/login"
            android:textColor="#4a72e2"
            android:textSize="16sp"/>


    </LinearLayout>
</ScrollView>