<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/home_recycle_news_img"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="12dp" />

    <RelativeLayout
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/home_recycle_news_img">


        <TextView
            android:id="@+id/home_recycle_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="新闻标题"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/home_recycle_news_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_recycle_news_title"
            android:layout_marginTop="4dp"
            android:lines="1"
            android:text="新闻内容"
            android:textColor="@color/base_text_gray"
            android:textSize="13sp" />

        <view
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/base_line_gray" />


    </RelativeLayout>

</RelativeLayout>