<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/main_color"
            >

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="9dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/tv_back_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/iv_back"
                android:text="@string/title_home_bank"
                android:textColor="@color/white"
                android:textSize="15sp"/>


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/collect_money"
                android:textColor="@color/white"
                android:textSize="17sp"/>


            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/len_12"
                android:background="@color/black"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/len_20"
            android:layout_marginLeft="@dimen/len_16"
            android:layout_marginRight="@dimen/len_16"
            android:layout_marginTop="@dimen/len_30"
            android:layout_weight="1"
            android:background="@drawable/pay_money_border">


            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"
                android:text="@string/collect_tip"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14"/>

            <ImageView
                android:id="@+id/iv_tiaoxingma"
                android:layout_width="290dp"
                android:layout_height="85dp"
                android:layout_below="@+id/tv_tip"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/len_26"
                android:background="@color/white"/>

            <ImageView
                android:id="@+id/iv_erweima"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_below="@+id/iv_tiaoxingma"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/len_50"
                android:layout_marginTop="@dimen/len_26"
                android:background="@color/white"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <LinearLayout
                android:id="@+id/ll_pay_fukuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_pay_ma"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_saomafu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_toRightOf="@+id/ll_pay_fukuan"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:background="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_pay_sao"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>


            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</ScrollView>