<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="15dp"
    android:background="@drawable/my_bank_border"
>


    <ImageView
        android:id="@+id/iv_bank"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="@dimen/len_20"
        android:layout_marginTop="@dimen/len_20"/>

    <TextView
        android:id="@+id/tv_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/len_20"
        android:layout_toEndOf="@+id/iv_bank"
        android:textColor="@color/white"
        android:textSize="17sp"
        tools:text="@string/my_bank"/>

    <TextView
        android:id="@+id/tv_bank_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_bank_name"
        android:layout_marginStart="15dp"
        android:layout_marginTop="@dimen/len_2"
        android:layout_toRightOf="@+id/iv_bank"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:text="@string/my_bank"/>


    <ImageView
        android:id="@+id/iv_bank_type"
        android:layout_width="54dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/len_22"
        android:layout_marginStart="@dimen/len_20"
        android:layout_marginTop="@dimen/len_20"/>


    <TextView
        android:id="@+id/tv_bank_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="@dimen/len_80"
        android:textColor="@color/white"
        android:textSize="17sp"
        tools:text="**** **** **** 9295"/>


</RelativeLayout>